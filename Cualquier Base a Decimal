// hugo.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "math.h"

using namespace std;
void main()

{
int N,R,D,S;
float i;
cout<<" Ingrese el numero : ";
cin>>N;
cout<<"Ingrese el valor de la base: ";
cin>>R;
S=0;
i=0;
while (N>0)
{
	D= N%10;
	N= N/10;
	S= S+D * pow(R,i);
	i= i+1;
}
cout<<"El valor del numero en base decimal es: ";
cout<<S;
getch();
		
}
